//COLORS
brand = #7C0090
accent = #006BCF
accent2 = #2E8000
offwhite = #fcfbfc
medgrey = #bbb
lightgrey = #e8e7e8
dull-brand = #75557A

//TYPOGRAPHIC
small-text = 90%
large-text = 120%

//MEASURES
sm-radius = 3px
med-radius = 5px

//MISC
soft-shadow = 1px 1px 12px rgba(black, .1)
micro-shadow = 0px 1px 1px rgba(black, .2)

link()
  color accent
  text-decoration: underline
  &:visited
    color brand


label()
  line-height 200%
  border-bottom 1px solid medgrey
  font-size small-text
  upcase()

card()
  box-shadow micro-shadow
  background white
  padding .5em

modal-style()
  box-shadow soft-shadow, micro-shadow
  background white

modal-window()
  modal-style()
  padding 1em
  margin-top 20%
  display inline-block
  position relative

modal-close()
  cursor pointer
  absolute top -.5em right -.5em
  size(1.5em)
  line-height 1.5em !important
  border-radius 50%
  background white
  box-shadow micro-shadow

modal-header()
  background lightgrey

button()
  font-size large-text
  color accent
  border 2px solid accent
  background transparent
  padding .5em
  border-radius med-radius
  box-shadow 0 3px 0 accent