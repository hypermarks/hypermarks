//COLORS
brand = #7C0090
accent = #006BCF
accent2 = #2E8000
offwhite = #f8f7f8
medgrey = #bbb
lightgrey = #e8e7e8
lightblue = #DEEFFA
dull-brand = #75557A


//TYPOGRAPHIC
small-text = unit(.9 * font-size, px)
reg-text =  unit(font-size, px)
large-text = unit(1.2 * font-size, px)
larger-text = unit(2 * font-size, px)

//MEASURES
sm-radius = 3px
med-radius = 5px

//MISC
soft-shadow = 1px 1px 12px rgba(black, .1)
micro-shadow = 0px 1px 1px rgba(black, .2)

link()
  color accent
  text-decoration: underline
  &:visited
    color brand


