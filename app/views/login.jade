//- This login page is very simple and does not present any interface to the user.
//- It simply exists to make a post request to the browserid endpoint
script(src="https://login.persona.org/include.js")
script.
  navigator.id.get(function(assertion) {
    if (!assertion) {
      return;
    }
    var xhr = new XMLHttpRequest();
    xhr.open("POST", "http://localhost:1337/auth/browserid", true);
    xhr.setRequestHeader("Content-Type", "application/json");

    xhr.addEventListener("loadend", function(e) {
      window.location.reload();
    }, false);

    xhr.send(JSON.stringify({
      assertion: assertion
    }));
  }, {
    backgroundColor: '#75557A',
    siteName: 'Hypermarks'
  });