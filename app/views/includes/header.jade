nav.topnav
  ._logo
    img(src="/images/hypermarks-logo_64.png")
    span._text Hypermarks
  ._controls
    ._searchbox
      img(src="/images/hypermarks-logo_64.png")
      input.search(placeholder="Search...")
      i.icon-search
    ._links
      ._link.-account
        span.js-logout 
          if user
            span.js-toggle #{user.email}
          else
            span#login Sign In
          i.icon-caret-down 