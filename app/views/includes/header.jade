nav.topnav
  ._logo
    img(src="/images/hypermarks-logo_64.png")
    span._text Hypermarks
  ._controls
    ._searchbox
      img(src="/images/hypermarks-logo_64.png")
      input.search(placeholder="Search...")
      i.icon-search
    ._links
      ._link.-account
        span
          if user
            .dropdown.js-toggle.-right 
              span Settings
              i.icon-caret-down 
              ul
                li._header #{user.email}
                li#logout Sign Out

          else
            span#login Sign In