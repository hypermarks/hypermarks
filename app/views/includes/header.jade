nav.header#header
  a.header__logo(href='/')
    img(src="/images/hypermarks-logo_64.png")
    span._text Hypermarks
  .header__controls
    form._searchbox(action="/_search", method="get")
      label.inline
        - var _q = q?q:""
        input(name="q", value="#{_q}")
        button.btn-quiet.js-add-link
          i.icon-search
          |&nbsp;Search
    .header__links
      ._link.-account
        span
          if user
            .dropdown.js-dropdown.-right 
              span #{user.username}
              i.icon-caret-down
              ul
                li._header #{user.email}
                li.js-logout Sign Out

          else
            a(href="/_auth/login") Sign In

  .header__bookmarklet
    a.js-bookmarklet Bookmarklet